{
  "manifest_version": 3,
  "name": "Compr Crosslisting Extension",
  "version": "1.0.1",
  "description": "Automate crosslisting to Poshmark, Mercari, and Depop. Detect sales and auto-delist across platforms.",
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "alarms",
    "webRequest"
  ],
  "host_permissions": [
    "https://poshmark.com/*",
    "https://www.mercari.com/*",
    "https://www.depop.com/*",
    "https://compr.co/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://poshmark.com/*"],
      "js": ["content-scripts/poshmark/listing-creator.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.mercari.com/*"],
      "js": ["content-scripts/mercari/listing-creator.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.depop.com/*"],
      "js": ["content-scripts/depop/listing-creator.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "externally_connectable": {
    "matches": [
      "https://compr.co/*",
      "http://localhost:3000/*"
    ]
  }
}
