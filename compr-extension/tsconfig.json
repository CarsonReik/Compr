{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./",
    "types": ["chrome", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "background/**/*",
    "content-scripts/**/*",
    "popup/**/*",
    "lib/**/*"
  ],
  "exclude": ["node_modules", "build", "dist"]
}
